# afahome
alias rhm='ssh afahome'

# transmission @afahome
alias rtrans='rhm transmission-remote'
alias rtrl='rtrans -l'
function rtra() {
  scp $@ afahome:Torrents/.new
}
function rtri() {
  rtrans -t $@ -i
}
function rtrf() {
  rtrans -t $@ -f
}
function rtrs() {
  rtrans -t $@ -s
}
function rtrS() {
  rtrans -t $@ -S
}
function rtrd() {
  rtrans -t $@ --remove-and-delete
}
function rcp() {
  scp -r $@ ./
}

